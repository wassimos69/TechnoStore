{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<style>
    body {
        background: url('/assets/images/bg.jpg') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        font-family: 'Arial', sans-serif;
    }
    .login-container {
        width: 100%;
        max-width: 400px;
        padding: 20px;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        text-align: center;
    }
    .login-container h1 {
        margin-bottom: 30px;
        font-size: 24px;
        font-weight: bold;
        color: #333;
    }
    .login-container .form-control {
        margin-bottom: 15px;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ddd;
        border-radius: 5px;
        transition: border-color 0.3s ease;
    }
    .login-container .form-control:focus {
        border-color: #f8b4a9;
        outline: none;
        box-shadow: 0 0 5px rgba(248, 180, 169, 0.5);
    }
    .login-container .btn {
        background-color: #f8b4a9;
        border-color: #f8b4a9;
        color: #fff;
        padding: 10px 15px;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }
    .login-container .btn:hover {
        background-color: #f09683;
        box-shadow: 0 4px 10px rgba(240, 150, 131, 0.3);
    }
    .login-container .forgot-password {
        display: block;
        margin-top: 10px;
        color: #999;
        text-decoration: none;
        transition: color 0.3s ease;
    }
    .login-container .forgot-password:hover {
        color: #f8b4a9;
    }
    .social-login {
        margin-top: 20px;
        text-align: center;
    }
    .social-login button {
        margin: 5px;
        padding: 10px 20px;
        font-size: 14px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }
    .social-login button.btn-primary {
        background-color: #3b5998;
        color: #fff;
    }
    .social-login button.btn-info {
        background-color: #1da1f2;
        color: #fff;
    }
    .social-login button:hover {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }
    .text-center a {
        color: #333;
        text-decoration: none;
        transition: color 0.3s ease;
    }
    .text-center a:hover {
        color: #f8b4a9;
    }
</style>

<div class="login-container">
   

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <form method="post">
        <div class="form-group">
            <label for="inputEmail">Username</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>

        <div class="form-group">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>

        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="rememberMe" name="_remember_me">
            <label class="form-check-label" for="rememberMe">Remember Me</label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-block" type="submit">SIGN IN</button>
        <a class="forgot-password" href="{{ path('app_forgot_password_request') }}">Forgot Password</a>

        <div class="social-login">
            <p>Or Sign In With</p>
            <button type="button" class="btn btn-primary">Facebook</button>
            <button type="button" class="btn btn-info">Twitter</button>
        </div>

        <div class="text-center">
            <a href="{{ path('app_register') }}">Create one</a>
        </div>
    </form>
</div>
{% endblock %}
